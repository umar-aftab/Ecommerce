@model IList<CategoryModel>
@if (Model.Count > 0)
{
    <div class="category-grid home-page-category-grid my-5">
        <div class="row">
            <div class="col-12 text-center mb-3 mt-5">
                <h4 class="home-category-heading">Shop Featured Categories</h4>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-6 col-lg-2 col-sm-4 home-category">
                    <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                        <figure class="d-flex h-65">
                            <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" class="img-fluid rounded-circle" />
                        </figure>
                        <figcaption>@item.Name</figcaption>
                    </a>
                </div>
            }
