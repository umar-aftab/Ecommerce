@model IList<ManufacturerBriefInfoModel>
@if (Model.Count > 0)
{
    <div class="manufacturers fs-6 mb-2">
        @if (Model.Count == 1)
        {
            <span>@T("Products.Manufacturer"): </span>
        }
        else
        {
            <span>@T("Products.Manufacturers"): </span>
        }
        <span class="value">
            @for (var i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <a class="fs-6" href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })">@item.Name</a>
                if (i != Model.Count - 1)
                {
                <span class="separator">, </span>
                }
            }
        </span>
    </div>
}