@model PasswordRecoveryModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
}
<div class="page password-recovery-page">
    <div class="page-title">
        <h1>@T("Account.PasswordRecovery")</h1>
    </div>
    <div class="page-body">
        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="result alert alert-success mb-4">
                @Model.Result
            </div>
        }
        <form asp-route="PasswordRecovery" method="post">
            <div asp-validation-summary="ModelOnly" class="message-error"></div>
            <p class="tooltip fs-6">@T("Account.PasswordRecovery.Tooltip")</p>

            <div class="row">
                <label asp-for="Email" asp-postfix=":" class="col-12 col-md-4 col-form-label text-md-end"></label>
                <div class="col-12 col-md-4 mb-3">
                    <input asp-for="Email" class="email form-control" />
                </div>
                <div class="col-12 col-md-4 required-error">
                    <span asp-validation-for="Email"></span>
                    <strong class="d-none d-md-block"><nop-required /></strong>
                </div>
                <div class="offset-md-4 col-md-2 col-12 mb-3 d-grid">
                    <button class="btn btn-primary btn-lg rounded-0 password-recovery-button text-uppercase" type="submit" name="send-email">
                        @T("Account.PasswordRecovery.RecoverButton")
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>