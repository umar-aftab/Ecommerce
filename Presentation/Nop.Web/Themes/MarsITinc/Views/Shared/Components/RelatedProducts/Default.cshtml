@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="related-products-grid product-grid mt-5">
        <div class="title fs-4">
            @T("Products.RelatedProducts")
        </div>
        <div class="row">
                @foreach (var item in Model)
                {
                <div class="item-box col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-4">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
                }
        </div>
    </div>
}